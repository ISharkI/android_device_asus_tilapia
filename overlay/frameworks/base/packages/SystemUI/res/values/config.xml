<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>

    <!-- Control whether status bar should distinguish HSPA data icon form UMTS
    data icon on devices -->
    <bool name="config_hspa_data_distinguishable">true</bool>

    <!-- Defines the implementation of the velocity tracker to be used for the panel expansion. Can
         be 'platform' or 'noisy' (i.e. for noisy touch screens). -->
    <string name="velocity_tracker_impl" translatable="false">noisy</string>

    <!-- Show camera affordance on Keyguard -->
    <bool name="config_keyguardShowCameraAffordance">false</bool>

    <!-- Disable expensive shadows -->
    <bool name="config_recents_fake_shadows">true</bool>

    <!-- Use hardware layers in recents -->
    <bool name="config_recents_use_hardware_layers">true</bool>

    <!-- The default tiles to display in QuickSettings -->
    <string name="quick_settings_tiles_default" translatable="false"> wifi,bt,inversion,dnd,cell,airplane,rotation,location,cast,hotspot,usb_tether,ambient_display,screenshot,nfc,sync,screenoff,timeout,brightness,music,reboot,battery_saver,expanded_desktop,adb_network,compass,themes,navigation_bar,ime</string>

    <!-- The default tiles to reset to in QuickSettings -->
    <string name="quick_settings_tiles_reset" translatable="false">wifi,bt,dnd,cell,airplane,rotation,location,cast,themes,screenoff</string>

    <!-- The tiles to display in QuickSettings -->
    <string name="quick_settings_tiles" translatable="false">wifi,bt,dnd,cell,airplane,rotation,location,cast,themes,screenoff</string>
</resources>

